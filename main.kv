<MainScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: right_button
        text: '>'
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": .9, "y":0}
        color: 0, 1, 0, 1
        on_press: root.switch_to_traj()

    DPEAButton:
        id: togfive
        text: 'Spin 5'
        size: 100, 100
        pos_hint: {"x": .4, "y": .2}
        color: 1, 1, 0, 1
        on_press: root.tog_spin_five()

    Slider:
        id: motorVel
        orientation: 'horizontal'
        min: 2
        max: 15
        step: 1
        center_x: root.width * 0.45
        y: root.height * 0.55
        on_value: root.set_motor_vel(self.value, motorAcel.value)
        sensitivity: 'handle'
        size_hint: .5, .5

    Slider:
        id: motorAcel
        orientation: 'horizontal'
        min: 0.5
        max: 5
        step: 1
        center_x: root.width * 0.45
        y: root.height * 0.25
        on_value: root.set_motor_acel(self.value, motorVel.value)
        sensitivity: 'handle'
        size_hint: .5, .5



    Label:
        id: lab
        font_size: 25
        text: 'Motor Speed: ' + str(motorVel.value)
        color: 1, 0.5, 1, 1
        x: root.width * -0.25
        y: root.height * 0.3

    Label:
        id: lab2
        font_size: 25
        text: 'Motor Accel: ' + str(motorAcel.value)
        color: 1, 0.5, 1, 1
        x: root.width * -0.25
        y: root.height * 0.0

    DPEAButton:
        id: left_button
        text: "<"
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": 0, "y":0}
        color: 1, 0, 0, 1
        on_press: root.switch_to_gpio()

<TrajectoryScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.85, "center_y":0.85}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

    DPEAButton:
        id: runTraj
        text:'Run Trajectory'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 0, 1, 0.5, 1
        on_press: root.runTrajectory(posSlide.value,accelSlide.value,velSlide.value,decelSlide.value )

    Label:
        id: pos
        font_size: 20
        text: 'Pos: ' + str(posSlide.value)
        color: 1, 0.5, 1, 1
        x: root.width * -0.40
        y: root.height * -0.35

    Label:
        id: accel
        font_size: 20
        text: 'Accel: ' + str(accelSlide.value)
        color: 1, 0.5, 1, 1
        x: root.width * -0.15
        y: root.height * -0.35

    Label:
        id: vel
        font_size: 20
        text: 'Vel: ' + str(velSlide.value)
        color: 1, 0.5, 1, 1
        x: root.width * 0.15
        y: root.height * -0.35

    Label:
        id: decel
        font_size: 20
        text: 'Decel: ' + str(decelSlide.value)
        color: 1, 0.5, 1, 1
        x: root.width * 0.40
        y: root.height * -0.35

    Slider:
        id: posSlide
        orientation: 'horizontal'
        min: 0
        max: 20
        step: 1
        center_x: root.width * 0.06
        y: root.height * 0.1
        sensitivity: 'handle'
        size_hint: .2, .2

    Slider:
        id: accelSlide
        orientation: 'horizontal'
        min: 0.5
        max: 5
        step: 0.5
        center_x: root.width * 0.3
        y: root.height * 0.1
        sensitivity: 'handle'
        size_hint: .2, .2

    Slider:
        id: velSlide
        orientation: 'horizontal'
        min: 0
        max: 15
        step: 1
        center_x: root.width * 0.6
        y: root.height * 0.1
        sensitivity: 'handle'
        size_hint: .2, .2

    Slider:
        id: decelSlide
        orientation: 'horizontal'
        min: 0.5
        max: 5
        step: 0.5
        center_x: root.width * 0.8
        y: root.height * 0.1
        sensitivity: 'handle'
        size_hint: .2, .2



<GPIOScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.85, "center_y":0.85}
        color: 1, 0, 0, 1
        on_press: root.switch_screen()

    DPEAButton:
        id: runGPIO
        text:'Check Pin'
        size: 100, 100
        pos_hint: {"center_x": 0.2, "center_y":0.5}
        color: 0, 1, 0.5, 1
        on_press: root.toggleGPIO()

    DPEAButton:
        id: runGPIO2
        text:'Check Spinny'
        size: 100, 100
        pos_hint: {"center_x": 0.8, "center_y":0.5}
        color: 0, 1, 0.5, 1
        on_press: root.toggleGPIO2()